<com.Fragments_Lib.frgmlib_ItemLay_A
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/frgmlib_list_a_LinearLayout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="#ffcc55">
	
	<!--
	android:layout_weight="0" 		(frgmlib_list_a_IV)
	android:layout_gravity="left"	(frgmlib_list_a_IV)
	android:layout_weight="1" 		(LinearLayout)
	-->
	
	
	<ImageView
		android:id="@+id/frgmlib_list_a_IV"
		android:layout_width="48dp"
		android:layout_height="48dp"
	/>
	

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>

		<TextView
			android:id="@+id/frgmlib_list_a_Main_TV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textSize="20sp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="5dp"
			android:paddingBottom="0dp"
			android:textColor="#940217"/>

		<TextView
			android:id="@+id/frgmlib_list_a_Sub_TV"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:singleLine="true"
			android:textSize="10sp"
			android:paddingLeft="20dp"
			android:paddingRight="10dp"
			android:textColor="#100DED"/>
	</LinearLayout>
</com.Fragments_Lib.frgmlib_ItemLay_A>

